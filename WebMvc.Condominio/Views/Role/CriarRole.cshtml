@using Microsoft.AspNetCore.Identity
@using WebMvc.Condominio.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model Microsoft.AspNetCore.Identity.IdentityRole

@{
	ViewData["Title"] = "Nova Role";
}
<div class="row">
	<div class="col-md-4">
		<form asp-action="CriarRole">
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input autofocus asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Salvar" title="Salvar" class="btn btn-success" />
				<a asp-action="ListarRoles" title="Cancelar" class="btn btn-warning">Cancelar</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}