@using Microsoft.AspNetCore.Identity
@using WebMvc.Condominio.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model WebMvc.Condominio.Models.ImovelViewModel

@{
	ViewData["Title"] = "Excluir morador";
}

<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h4 class="modal-title">@ViewData["Title"]</h4>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="modal-body">
			<p>
				Tem certeza que deseja excluir o morador?
			</p>
			<div class="row">
				<form asp-action="ExcluirMorador">
					<div class="modal-footer">
						<button type="button" class="btn btn-success" data-dismiss="modal" onclick="goBack()">Não</button>
						<input type="hidden" asp-for="Morador.Id" />
						<button asp-action="ExcluirMorador" asp-route-id="@Model.Morador.Id" type="submit" class="btn btn-danger pull-left">Sim</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>