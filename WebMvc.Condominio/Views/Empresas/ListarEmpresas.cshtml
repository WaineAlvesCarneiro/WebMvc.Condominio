@using Microsoft.AspNetCore.Identity
@using WebMvc.Condominio.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model IEnumerable<WebMvc.Condominio.Models.Empresa>

@{
	ViewData["Title"] = "Lista empresas";
}

<p><a asp-action="CadastrarEmpresas" class="btn btn-warning" >Adicionar</a></p>

<table class="table table-hover">
	<thead>
		<tr class="table-success">
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RazaoSocial)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Fantasia)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cnpj)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Tipo)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="table-active">
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RazaoSocial)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Fantasia)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cnpj)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Tipo)
				</td>
				<td class="text-center">
					<a asp-action="DetalharEmpresa" title="Detalhar Empresa" class="btn btn-primary" asp-route-id="@item.Id">
						<spam class="fa fa-search"></spam>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
